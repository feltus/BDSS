{% extends "layout.html.jinja" %}
{% import "form_macros.html.jinja" as form_macros %}

{% block page_header %}{{ destination.label }}{% endblock %}

{% block content %}

<p>Are you sure you want to delete this destination? This cannot be undone.</p>

{{ form_macros.render_form(form, action_text="Delete", action_url=url_for("destinations.delete_destination", destination_id=destination.id), btn_class="btn btn-danger") }}

<p style="margin-top:20px;"><a class="btn btn-default" href="{{ url_for('destinations.show_destination', destination_id=destination.id) }}">Cancel</a></p>

{% endblock %}
