{% extends "authenticated.html.jinja" %}

{% block head %}
<style>
svg {
    font: 10px sans-serif;
    max-width: 720px;
}

.axis path,
.axis line {
    fill: none;
    stroke: #000;
    shape-rendering: crispEdges;
}

.dot {
    stroke: #000;
}
</style>
{% endblock %}

{% block page_header %}{{ data_source.label }} - Timing Reports{% endblock %}

{% block content %}

<div id="graph-container" style="height:300px;width:100%;"></div>

{% if reports|length > 0 %}
    <ul>
        {% for report in reports %}
            <li style="position:relative;">
                {%- if report.is_transfer_rate_outlier -%}
                    <span class="glyphicon glyphicon-warning-sign" style="color:#f0ad4e;position:absolute;left:-35px;top:3px;"></span>
                {%- endif -%}
                <a href="{{ url_for('routes.show_timing_report', source_id=data_source.id, report_id=report.report_id) }}">{{ report.created_at }} - {{ report.url }}</a>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p>No timing reports found.</p>
{% endif %}

<p style="margin-top:20px;"><a href="{{ url_for('routes.show_data_source', source_id=data_source.id) }}"><span class="glyphicon glyphicon-chevron-left"></span>{{ data_source.label }}</a></p>

{% endblock %}

{% block scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.13/d3.min.js"></script>
<script>
function plotGraph(points) {
    console.log(points);
    points.forEach(function(p) { console.log(p[1]); });

    var margin = {top: 20, right: 20, bottom: 30, left: 120},
    width = 720 - margin.left - margin.right,
    height = 300 - margin.top - margin.bottom;

    var x = d3.time.scale()
        .domain(d3.extent(points, function(d) { return new Date(d[0]); }))
        .range([0, width]);

    var y = d3.scale.linear()
        .domain([0, d3.max(points, function(d) { return d[1]; })])
        .range([height, 0]);

    var color = d3.scale.category10();

    var xAxis = d3.svg.axis()
        .scale(x)
        .orient("bottom");

    var yAxis = d3.svg.axis()
        .scale(y)
        .orient("left");

    var svg = d3.select("#graph-container").append("svg")
        .attr("width", "100%")
        .attr("height", "100%")
        .attr("viewBox", "0 0 " + 720 + " " + 300)
        .attr("preserveAspectRatio", "xMidYMid meet")
        .append("g")
            .attr("transform", "translate(" + margin.left + "," + margin.top + ")");

    svg.append("g")
        .attr("class", "x axis")
        .attr("transform", "translate(0," + height + ")")
        .call(xAxis)
    .append("text")
        .attr("class", "label")
        .attr("x", width)
        .attr("y", -6)
        .style("text-anchor", "end")
        .text("Transfer Time");

    svg.append("g")
        .attr("class", "y axis")
        .call(yAxis)
        .append("text")
            .attr("class", "label")
            .attr("transform", "rotate(-90)")
            .attr("y", 6)
            .attr("dy", ".71em")
            .style("text-anchor", "end")
            .text("Transfer Rate (bytes / second)")

    svg.selectAll(".dot")
        .data(points)
    .enter().append("circle")
        .attr("class", "dot")
        .attr("r", 3.5)
        .attr("cx", function(d) { return x(new Date(d[0])); })
        .attr("cy", function(d) { return y(d[1]); });
}

$.get('timing_reports/graph', function(data) { plotGraph(data.points); });
</script>
{% endblock %}
