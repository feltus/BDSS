{% extends "authenticated.html.jinja" %}

{% block page_header %}Delete Timing Report{% endblock %}

{% block content %}

<p>Are you sure you want to delete this timing report? This cannot be undone.</p>

<form action="{{ url_for('routes.delete_timing_report', source_id=report.data_source_id, report_id=report.report_id) }}" method="POST">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<p style="margin-top:20px;"><a class="btn btn-default" href="{{ url_for('routes.show_timing_report', source_id=report.data_source_id, report_id=report.report_id) }}">Cancel</a></p>

{% endblock %}
