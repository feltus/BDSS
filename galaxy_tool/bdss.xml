<?xml version="1.0"?>

<tool id="bdss" name="BDSS" version="0.0.1">
    <description>Download files</description>
    <command>
        <![CDATA[
            echo "$manifest" | xargs -n 1 -P $maxprocs /path/to/bdss.exe --no-color transfer --destination data_files --urls
        ]]>
    </command>
    <inputs>
        <param name="manifest" label="URLs of data files" type="text" area="True" size="5x35">
            <sanitizer sanitize="False"/>
        </param>
        <param name="maxprocs" label="Max number of parallel processes" type="integer" value="2" min="1"/>
    </inputs>
    <outputs>
        <data name="output">
            <discover_datasets pattern="(?P&lt;name&gt;.*)" directory="data_files" visible="true"/>
        </data>
    </outputs>
    <stdio>
        <exit_code range="1:" level="fatal" description="Error"/>
    </stdio>
    <help></help>
</tool>
