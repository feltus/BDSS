{% extends 'layout.html.jinja' %}

{% block content %}
<h3 class="page-header">Sign In</h3>

<form role="form">
    <div class="form-group">
        <label for="email">Email Address:</label>
        <input type="email" class="form-control" id="email">
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password">
    </div>

    <div class="form-group" style="text-align:right;">
        <button class="btn btn-primary btn-lg" type="submit" id="signin-btn">Sign In</button>
        <p style="margin-top:25px;">Or <a href="/signup">create an account<a></p>
    </div>

</form>
{% endblock %}

{% block scripts %}
<script src="/static/js/form-utils.js"></script>
<script src="/static/js/signin.js"></script>
{% endblock %}
